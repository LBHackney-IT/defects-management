#!/bin/sh

set -e


function cleanup {
  # capture exit code
  code=$?
  echo "cleaning up"

  # ignore errors
  set +e
  docker-compose down

  exit $code
}

trap cleanup EXIT
docker-compose build
docker-compose run --rm web rake db:setup db:migrate
docker-compose up -d

docker attach request-a-repair-purple_dev_web_1
