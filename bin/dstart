#!/bin/sh

set -e

run_with_pretty_print()
{
  echo "\n\033[36m===> $1\033[0m\n"
  eval $1
}

function cleanup {
  # capture exit code
  code=$?
  echo "cleaning up"

  # ignore errors
  set +e
  docker-compose down

  exit $code
}

trap cleanup EXIT

run_with_pretty_print 'docker-compose build'
run_with_pretty_print 'docker-compose run --rm web rake db:setup db:migrate'
run_with_pretty_print 'docker-compose up -d'

run_with_pretty_print 'docker attach request-a-repair-purple_dev_web_1'
