#!/bin/bash

set -e

run_with_pretty_print()
{
  echo "\n\033[36m===> $1\033[0m\n"
  eval $1
}

start_test_server()
{
  run_with_pretty_print 'docker-compose --file docker-compose.test.yml build'
  run_with_pretty_print 'docker-compose --file docker-compose.test.yml up -d db-test'
  run_with_pretty_print 'docker-compose --file docker-compose.test.yml run --rm test rake db:setup db:migrate'
  run_with_pretty_print 'docker-compose --file docker-compose.test.yml up -d test'
}


if [[ $# -eq 0 ]]
then
  run_with_pretty_print 'docker-compose --file docker-compose.test.yml down'
  start_test_server
fi

if [[ $1 == "up" ]]
then
  run_with_pretty_print 'docker-compose --file docker-compose.test.yml down'
  start_test_server
fi

if [[ $1 == "down" ]]
then
  run_with_pretty_print 'docker-compose --file docker-compose.test.yml down'
fi
